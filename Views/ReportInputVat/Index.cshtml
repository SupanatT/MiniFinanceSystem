@section ScriptFirst{
    <script>
        function checkPermission() {
            @*if ('@Html.ValueFor(x => x.Permission.View)' !== 'True') {
                $('.@Html.IdFor(x => x.Permission.View)').remove();
            }*@
        }
    </script>
