<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Accounting</title>
    <script>
        var rootAppAcc = '@Url.Content("~")';
    </script>

    @Styles.Render("~/Content/Common", "~/Content/datepicker", "~/Content/select2")
    @Scripts.Render("~/Script/Common", "~/Script/datepicker", "~/Scripts/select2")
    @Scripts.Render("~/bundles/autonumeric")
    @RenderSection("ScriptFirst", required: false)
</head>
<body class="page-container-bg-solid page-header-fixed page-sidebar-closed-hide-logo">
    <div class="page-header navbar navbar-fixed-top">
        @Html.Action("_PageTopMenu", "Default")
    </div>
    <div class="clearfix"> </div>
    <div class="page-container">
        <div class="page-sidebar-wrapper">
            <div class="page-sidebar navbar-collapse collapse">
                @Html.Action("_PageMenu", "Default")

            </div>
        </div>
        <div class="page-content-wrapper">
            <div class="page-content">
                @RenderBody()
            </div>
        </div>
    </div>
    <div class="page-footer">
        <div class="page-footer-inner">
            @DateTime.Now.Year &copy; iTOS Consulting ,Current Version @typeof(MiniFinance.MvcApplication).Assembly.GetName().Version
        </div>
        <div class="scroll-to-top">
            <i class="icon-arrow-up"></i>
        </div>
    </div>

    @Html.Action("_Modal", "Default")
    @Html.Action("_Loading", "Default")


    <script type="text/javascript">
        var rootWebLogin = '@VirtualPathUtility.ToAbsolute("~/Home/Expire")';
        var rootWebPth = '@VirtualPathUtility.ToAbsolute("~/Home/Error")';
        var root = '@Url.Content("~")';

    </script>



    @RenderSection("ScriptEnd", required: false)
</body>
</html>
